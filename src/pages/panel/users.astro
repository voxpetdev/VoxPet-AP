---
import Layout from "../../layouts/Layout.astro"
import UsersPanel from "@/sections/UsersPanel.astro"
import Aside from "../../sections/Aside.astro"

const cookie = Astro.cookies.get("access_token")?.value
if (!cookie) return Astro.redirect('/')
---

<Layout title="VoxPet - Admin Panel">
    <div class="flex min-h-screen w-screen bg-gray-100 dark:bg-gray-900">
        <Aside />
        <div class="flex flex-col min-h-screen w-full">
            <div class="flex-1">
                <UsersPanel />
            </div>
        </div>
    </div>
</Layout>