---
interface Props {
    name: string,
    inputType?: HTMLInputTypeAttribute,
    text: string,
    required?: boolean
}

const { inputType, text, name, required } = Astro.props
---
<input id={name} class="border-2 py-2 px-3 border-stone-200 outline-none rounded-lg focus:border-primary dark:text-white" name={name} type={inputType ?? "text"} placeholder={text} {required}>