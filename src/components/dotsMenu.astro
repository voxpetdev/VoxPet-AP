---
import DotsIcon from "@/icons/dotsIcon.astro"

interface Props {
    userID: String
}

const { userID } = Astro.props
---
<div class="dots-menu" data-userid={userID}>
    <button class="text-stone-400 cursor-pointer hover:bg-primary/20 hover:text-stone-600 dark:hover:text-stone-200 rounded-full p-0.5">
        <DotsIcon />
    </button>
    <section class="menu bg-stone-800/80 p-2 float-right rounded-md text-white hidden flex-col gap-0.5 w-fit absolute">
        <button class="font-bold cursor-pointer hover:bg-stone-400 p-0.5">Editar</button>
        <button class="font-bold cursor-pointer hover:bg-stone-400 p-0.5">Deshabilitar</button>
    </section>
</div>
